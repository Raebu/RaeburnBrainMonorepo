[Unit]
Description=Raeburn Brain AI service
After=network.target

[Service]
Type=simple
User=raeburn
WorkingDirectory=/opt/raeburn
ExecStart=/usr/local/bin/uvicorn raeburn_brain.server:create_app --host 0.0.0.0 --port 8080
Restart=always
EnvironmentFile=/etc/raeburn/env
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
